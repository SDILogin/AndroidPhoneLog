<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:text="@string/title_of_the_new_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_clickme"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="save to log"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/id_button_change_log_and_save_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new log (save)"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/id_button_change_log_and_delete_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new log (delete)"
            />
    </LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="clear folder"
    android:id="@+id/id_button_clear_folder"
    android:layout_centerHorizontal="true"/>
</RelativeLayout>
